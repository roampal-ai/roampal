# Roampal AI Neural UI Configuration
# Copy to .env and customize

# Feature Flags
VITE_ENABLE_NEURAL_UI=false             # Enable new Neural UI (default: false)
VITE_ENABLE_MOCK_MODE=false             # Force mock mode for testing (default: false)
VITE_ENABLE_DEBUG_LOGGING=false         # Enable debug console logs (default: false)

# Backend URLs
VITE_API_BASE=http://localhost:8000     # FastAPI backend base URL
VITE_WS_URL=ws://localhost:8000/ws/chat # WebSocket endpoint for streaming
VITE_TRANSPORT=ws                       # Transport mode: 'ws' or 'sse' (default: ws)

# API Endpoint Paths (customize if your backend differs)
VITE_HEALTH_PATH=/api/health
VITE_CHAT_PATH=/api/chat
VITE_STREAM_PATH=/api/stream
VITE_MEMORY_SEARCH_PATH=/api/memory/search
VITE_MEMORY_ADD_PATH=/api/memory/add
VITE_MEMORY_FRAGMENTS_PATH=/api/memory/fragments
VITE_SHARDS_LIST_PATH=/api/shards
VITE_SHARDS_SWITCH_PATH=/api/shards/switch
VITE_SHARDS_CREATE_PATH=/api/shards/create
VITE_HISTORY_PATH=/api/chat/history

# Performance Settings
VITE_REQUEST_TIMEOUT=30000              # HTTP request timeout in ms (default: 30000)
VITE_MAX_RETRIES=3                      # Maximum retry attempts (default: 3)
VITE_RETRY_DELAY=1000                   # Base retry delay in ms (default: 1000)
VITE_WS_RECONNECT_INTERVAL=5000         # WebSocket reconnect interval (default: 5000)
VITE_WS_MAX_RECONNECT_ATTEMPTS=10       # Max WebSocket reconnect attempts (default: 10)

# Storage Settings
VITE_STORAGE_PREFIX=roampal             # LocalStorage key prefix (default: roampal)
VITE_MESSAGE_CACHE_SIZE=50              # Number of messages to persist (default: 50)