# LoopSmith Configuration Template
# Copy this file to .env and customize for your environment

# ============================================
# SECURITY SETTINGS (IMPORTANT!)
# ============================================

# Authentication (REQUIRED IN PRODUCTION!)
LOOPSMITH_REQUIRE_AUTH=true
LOOPSMITH_API_KEY=change-this-to-a-secure-random-key-minimum-32-chars

# CORS Configuration (restrict to your domains)
LOOPSMITH_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,tauri://localhost

# IP Restrictions (use specific IPs in production)
LOOPSMITH_ALLOWED_IPS=127.0.0.1,::1

# Rate Limiting
LOOPSMITH_RATE_LIMIT=true
LOOPSMITH_RATE_LIMIT_REQUESTS=100
LOOPSMITH_RATE_LIMIT_PERIOD=60

# Workspace Configuration (jail directory for file operations)
LOOPSMITH_WORKSPACE=/workspace
LOOPSMITH_PROJECTS=/app/data/loopsmith/projects

# Session Management
LOOPSMITH_SESSION_TIMEOUT=3600
LOOPSMITH_MAX_SESSIONS=10

# Server Configuration
LOOPSMITH_HOST=127.0.0.1
LOOPSMITH_PORT=8000
LOOPSMITH_BIND=127.0.0.1

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=codellama
OLLAMA_TIMEOUT=30

# ChromaDB Configuration
CHROMADB_HOST=localhost
CHROMADB_PORT=8003
CHROMADB_USE_SERVER=true

# Memory Scoring Configuration
MEMORY_INITIAL_SCORE=0.5
MEMORY_POSITIVE_BOOST=0.2
MEMORY_NEGATIVE_PENALTY=0.3
MEMORY_PARTIAL_BOOST=0.05

# Memory Retrieval Configuration
MEMORY_TOP_K=10
MEMORY_MAX_RESULTS=100

# Logging
LOG_LEVEL=INFO

# Container Environment
LOOPSMITH_CONTAINER=false